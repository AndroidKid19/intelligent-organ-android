<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/public_white"
    android:minHeight="60dp"
    android:orientation="vertical">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:gravity="start|center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/organ_ic_metting_details_device"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:text="设备"
            android:textColor="@color/public_color_text_gray"
            android:textSize="@dimen/public_font_15sp" />

        <com.yway.scomponent.commonres.view.layout.FlowLayout
            android:id="@+id/fview_devices"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:flChildSpacing="10dp"
            app:flRowSpacing="8dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/organ_shape_tag_background"
                android:paddingLeft="15dp"
                android:paddingTop="2dp"
                android:paddingRight="15dp"
                android:paddingBottom="2dp"
                android:text="投影仪"
                android:textColor="@color/public_white"
                android:textSize="12sp" />
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/organ_shape_tag_background"
                android:paddingLeft="15dp"
                android:paddingTop="2dp"
                android:paddingRight="15dp"
                android:paddingBottom="2dp"
                android:text="话筒"
                android:textColor="@color/public_white"
                android:textSize="12sp" />

        </com.yway.scomponent.commonres.view.layout.FlowLayout>
    </androidx.appcompat.widget.LinearLayoutCompat>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_gravity="bottom"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/public_colorLine" />
</androidx.appcompat.widget.LinearLayoutCompat>