<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="10dp"
    android:gravity="center_vertical">

    <com.yway.scomponent.commonres.view.layout.NiceImageView
        android:id="@+id/niv_head"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/public_ic_default_head"
        app:corner_radius="5dp"
        app:is_circle="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view_line"
        android:layout_width="@dimen/public_line_size"
        android:layout_height="@dimen/public_line_size"
        app:layout_constraintLeft_toRightOf="@+id/niv_head"
        app:layout_constraintTop_toTopOf="@+id/niv_head" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_del"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignParentRight="true"
        android:scaleType="centerCrop"
        android:src="@mipmap/public_ic_delete_menu"
        app:layout_constraintLeft_toLeftOf="@+id/view_line"
        app:layout_constraintRight_toRightOf="@+id/view_line"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_user_name"
        style="@style/TextGray"
        app:layout_constraintLeft_toLeftOf="@+id/niv_head"
        app:layout_constraintRight_toRightOf="@+id/niv_head"
        app:layout_constraintTop_toBottomOf="@+id/niv_head"
        tools:text="田默默" />
</androidx.constraintlayout.widget.ConstraintLayout>