<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_message_ic"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginLeft="@dimen/public_mar_left_16dp"
        android:src="@mipmap/user_ic_message"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />
        <LinearLayout
            android:id="@+id/layout_content"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/public_mar_left_10dp"
            android:paddingRight="16dp"
            android:gravity="center_vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/iv_message_ic"
            app:layout_constraintRight_toRightOf="parent"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/TextDefault.Medium"
                    android:textStyle="bold"
                    android:text="系统消息"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_date"
                    style="@style/TextGray"
                    android:textStyle="bold"
                    tools:text="下午 06 : 45"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_content"
                style="@style/TextGray"
                android:layout_marginTop="8dp"
                tools:text="尊敬的各位医生你们好尊敬尊敬的各位医生你们好尊敬的各位医生你们好尊敬的各位医生你们好的各位医生你们好尊敬的各位医生你们好，近期患者较多，请认真填写..."
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_alignParentRight="true"
                />
        </LinearLayout>

        <View
            android:id="@+id/view_line"
            android:layout_width="0dp"
            android:layout_marginTop="13dp"
            android:layout_height="@dimen/public_line_size"
            android:background="@color/public_colorLine"
            app:layout_constraintTop_toBottomOf="@+id/iv_message_ic"
            app:layout_constraintLeft_toLeftOf="@+id/layout_content"
            app:layout_constraintRight_toRightOf="@+id/layout_content"
            />
</androidx.constraintlayout.widget.ConstraintLayout>