<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:visibility="gone"
        layout="@layout/public_include_title" />

    <com.yway.scomponent.commonres.view.layout.NoScrollViewPager
        android:id="@+id/public_main_container"
        android:layout_below="@+id/public_toolbar"
        android:layout_above="@+id/navigation_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <com.yway.scomponent.commonres.view.bottomnavigationviewex.BottomNavigationViewEx
        android:id="@+id/navigation_view"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        app:itemTextColor="@color/selector_item_primary_color"
        app:menu="@menu/public_menu_navigation_selector" />

</RelativeLayout>
